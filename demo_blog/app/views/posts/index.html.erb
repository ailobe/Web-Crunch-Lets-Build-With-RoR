<% content_for :page_title, 'Index' %>

<section class='section'>
  <div class='container'>
    <% @posts.each do |post| %>
      <div class='card'>
        <div class='card-content'>
          <p class="title is-4"><%= link_to post.title, post %></p>
        </div>
        <div class='card-content'>
          <div class='content'>
            <%= post.content %>
          </div>
        </div>
        <div class='card-content'>
          <div class='comment-count'>
            <span class='tag is-rounded'><%= post.comments.count %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>